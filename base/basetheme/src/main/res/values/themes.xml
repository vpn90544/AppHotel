<resources>
    <style name="Theme.MyTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="defaultTransitionEnter">@anim/slide_in_right</item>
        <item name="defaultTransitionExit">@anim/slide_out_left</item>
        <item name="defaultTransitionPopEnter">@anim/slide_in_left</item>
        <item name="defaultTransitionPopExit">@anim/slide_out_right</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.MyTheme.Base">

        <item name="colorPrimary">@color/yellow_A700</item>
        <item name="colorPrimaryVariant">@color/yellow_300</item>
        <item name="colorOnPrimary">@color/yellow_100</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorCardStandardColorBackground">@color/blue_100</item>
        <item name="colorCardBlurredColorBackground">@color/yellow_200</item>

        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondaryContainer">@color/gray_400</item>
        <item name="colorSecondaryContainer">@color/gray_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="errorIconTint">@color/error</item>
        <item name="colorOutline">@color/gray_400</item>

        <item name="colorOnTertiary">@color/gray_100</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

    </style>
</resources>