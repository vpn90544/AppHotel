<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Liberty" />

    <style name="Liberty.Button">
        <item name="android:layout_width">@dimen/coreui_liberty_button_width</item>
        <item name="android:layout_height">@dimen/coreui_liberty_button_height</item>
        <item name="android:paddingHorizontal">@dimen/spacing_large</item>
        <item name="android:paddingVertical">@dimen/spacing_small</item>
        <item name="fontFamily">@font/roboto700</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Liberty.Text.ButtonsS</item>
        <item name="android:enabled">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Liberty.Button.Primary">
        <item name="android:background">@drawable/selector_background_button_primary</item>
        <item name="android:textColor">@drawable/selector_text_color_button_primary</item>
    </style>

    <style name="Liberty.Button.Secondary">
        <item name="android:background">@drawable/selector_background_button_secondary</item>
        <item name="android:textColor">@drawable/selector_text_color_button_secondary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/coreui_liberty_button_width</item>
        <item name="android:layout_height">@dimen/coreui_liberty_button_height</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:enabled">false</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/spacing_xsmall</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:paddingHorizontal">@dimen/spacing_large</item>
        <item name="android:paddingVertical">@dimen/spacing_small</item>
        <item name="fontFamily">@font/roboto700</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Liberty.Button.Disabled">
        <item name="android:background">@drawable/background_button_disabled</item>
        <item name="android:textColor">@color/separator</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Liberty.Button.Tertiary">
        <item name="android:background">@drawable/background_button_tertiary</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:textAppearance">@style/Liberty.Text.CaptionXS</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">0dp</item>
        <!-- Text must be underlined with <u></u> -->
    </style>

    <style name="SmsTextInputEditTextStyleLiberty" parent="Widget.AppCompat.EditText">
        <item name="boxBackgroundColor">@color/gray_100</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@null</item>
        <item name="fontFamily">@font/roboto700</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="minHeight">@dimen/spacing_xxlarge</item>
    </style>


    <style name="HeaderTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/roboto700</item>
    </style>

    <style name="TextInputEditTextStyleLiberty" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="boxBackgroundColor">@color/gray_100</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@null</item>
        <item name="fontFamily">@font/roboto700</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:layout_width">@dimen/input_text_width</item>
        <item name="minHeight">@dimen/spacing_xxlarge</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_xsmall</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_xsmall</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_xsmall</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_xsmall</item>
    </style>

    <style name="Liberty.Toolbar">
        <item name="android:background">@color/color_bg_primary</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Liberty.Toolbar.TitleText">
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#001A34</item>
    </style>

    <style name="AccountCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="AccountCardButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/account_card_button_background</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Liberty.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@drawable/switch_track_selector</item>
        <item name="thumbTint">@drawable/switch_thumb_selector</item>
    </style>

    <style name="Liberty.ProductCard">
        <item name="android:background">@drawable/account_card_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Liberty.ProductCard.HeaderText">
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#001A34</item>
    </style>

    <style name="Liberty.ProductCard.DescriptionText">
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3001A34</item>
    </style>

    <style name="Liberty.ButtonWithIcon">
        <item name="android:background">@drawable/ripple_button_with_icon</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Liberty.ButtonWithIcon.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#001A34</item>
    </style>

    <style name="Liberty.InformationTextHeaderTextStyle">
        <item name="android:fontFamily">@font/roboto500</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Liberty.InformationTextBaseTextStyle">
        <item name="android:fontFamily">@font/roboto400</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Liberty.Text">
        <item name="android:fontFamily">@font/roboto400</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Liberty.Text.HeadXL">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Liberty.Text.HeadM">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Liberty.Text.HeadL">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Liberty.Text.BodyML">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Liberty.Text.BodyL">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Liberty.Text.ButtonsM">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Liberty.Text.ButtonsS">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Liberty.Text.CaptionXS">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Liberty.Text.CaptionS">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabItemStyleLiberty">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto700</item>
    </style>

    <style name="AppCompatButtonKeyboard">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_height">@dimen/appcompat_keyboard_button_height</item>
        <item name="android:layout_width">@dimen/appcompat_keyboard_button_width</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:backgroundTint">#001A34</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto400</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="height">@dimen/spacing_large</item>
        <item name="android:width">@dimen/keyboard_button_width</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Liberty.Category">
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Liberty.BottomSheetDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources>